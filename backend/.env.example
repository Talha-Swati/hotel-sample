NODE_ENV=development
PORT=5000
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority

# Comma-separated list of allowed origins
# Required for Phase 6: localhost dev + production frontend domain
# Example: http://localhost:5173,http://localhost:3000,https://tinyescape.vercel.app
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://tinyescape.vercel.app

# Square (for future payment integration)
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_WEBHOOK_SIGNATURE_KEY=
